<div class="container">
  <h4>Create a New Account</h4>
  <br>
  <%= form_for(@user) do |f| %>

    <div class="input-field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="input-field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="input-field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.submit "create account" %>
    </div>
  <% end  %>

</div>
