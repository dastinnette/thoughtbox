<div class="container">
  <h3>submit a link</h3>
  <%= form_for(@link) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :url %>
    <%= f.url_field :url %>

    <%= f.submit "submit link" %>
  <% end %>

  <br>

  <h3>all links</h3>

  <% @links.each do |link| %>
    <%= link.title %>
    <%= link.url %>
    <%= link.read %>
  <% end %>
</div>
